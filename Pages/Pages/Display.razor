@page "/display"
@inherits DisplayBase

<h3>DisplayStudents</h3>

<div>
    @if (Authors == null)
    {
        <p>Loading ...</p>
    }
    else
    {
        <div>
            <table class="table">
                <thead>
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Authors)
                    {
                    <tr>
                        <td>@item.FirstName</td>
                        <td>@item.LastName</td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

<div>
    @if (Books == null)
    {
        <p>Loading ...</p>
    }
    else
    {
        <div>
            <table class="table">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Author First Name</th>
                        <th>Author Last Name</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Books)
                    {
                        <tr>
                            <td>@item.Title</td>
                            <td>@item.Description</td>
                            <td>@item.Author.FirstName</td>
                            <td>@item.Author.LastName</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>