@page "/studentdetails/{id}"
@page "/studentdetails"

@inherits StudentDetailsBase

<h3>StudentDetails</h3>



@if (Student == null)
{
    <p>Loading ...</p>
}
else
{
    <div>
        <table class="table">
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Enrollment Date</th>
                    <th>All enrollments</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Student)
                {
                <tr>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@item.EnrollmentDate</td>
                    <td>@item.Enrollments</td>
                </tr>
                
            }
                    @*<td>@Student.FirstName</td>
                <td>@Student.LastName</td>
