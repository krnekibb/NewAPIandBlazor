@page "/studentdetails/{id}"
@page "/studentdetails"

@inherits StudentDetailsBase

<h3>StudentDetails</h3>

<div>
    @if (Student == null)
        {
            <p>Loading ...</p>
        }
        else
        {
            <div>
                <table class="table">
                    <thead>
                        <tr>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Enrollment Date</th>
                            <th>All enrollments</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>@Student.FirstName</td>
                            <td>@Student.LastName</td>
                            <td>@Student.EnrollmentDate</td>
                            @foreach (var i in Student.Enrollments)
                            {
                                <td>@i.Course.Title</td>
                                <td>@i.Grade</td>
                            }
                        </tr> 
                    </tbody>
                </table>
            </div>
        }
</div>

<div>
    @if (Student == null)
    {
        <p>Loading ...</p>
    }
    else
    {
        <div>
            <table class="table">
                <thead>
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Enrollment Date</th>
                        <th>Enrollments</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Enrollments)
                    {
                        <tr>
                            <td>@item.Student.FirstName</td>
                            <td>@item.Student.LastName</td>
                            <td>@item.Student.EnrollmentDate</td>
                            <td>@item.Course.Title</td>
                            <td>@item.Grade</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>